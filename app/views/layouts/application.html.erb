    <link rel="icon" type="image/png" href="/assets/E.png">
    <link rel="stylesheet" href="style.css">
    <script src="https://kit.fontawesome.com/8813a93217.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Anton|Staatliches|Varela+Round&display=swap" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Optional JavaScript -->
